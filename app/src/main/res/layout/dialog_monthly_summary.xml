<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/ll_summary_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#29a366"
            android:text="Expense Summary (Monthly)"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_summary_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_summary_header"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <LinearLayout
            android:id="@+id/ll_summary_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Food:"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_fuel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fuel:"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_bills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bills:"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_summary_left_values"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_food_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£200"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_fuel_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£70"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_bills_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£80 "
                android:textColor="#000" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_summary_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rent:"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_social"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social:"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_summary_right_values"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_rent_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£360"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tv_social_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£150"
                android:textColor="#000" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vw_space_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ll_summary_overview" />

    <LinearLayout
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vw_space_two"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15">

            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total:"
                android:textColor="#000"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.35">

            <TextView
                android:id="@+id/tv_total_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="£860"
                android:textColor="#000"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vw_space_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/ll_total" />

</RelativeLayout>